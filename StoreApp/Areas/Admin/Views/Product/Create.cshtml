@model ProductDtoForInsertion
<div class="text-center">
    <div class="display-6">Create</div>
</div>
<form method="post" asp-action="Create" enctype="multipart/form-data"> @*Eger enctype="multipart/form-data olmazsa dosyayi gonderirken hata yasayabiliriz."*@
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryID"></label>
        <select class="form-control" 
        asp-items="@ViewBag.Categories"
        asp-for="CategoryID">
            @*foreach(Category cat in ViewBag.Categories)@*ViewBag ile Category modelini kullanabileceÄŸiz
            {
                <option value="@cat.CategoryID">@cat.CategoryName</option>
            }*@
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control"/>
    </div> 
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control"/>
    </div> 
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>