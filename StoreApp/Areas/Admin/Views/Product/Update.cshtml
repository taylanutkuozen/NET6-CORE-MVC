@model ProductDtoForUpdate
<div class="text-center">
    <div class="display-6">Create</div>
</div>
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID"/>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryID"></label>
        <select class="form-control" 
        asp-items="@ViewBag.Categories"
        asp-for="CategoryID">
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder="ProductName"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" placeholder="ProductPrice"/>
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control" placeholder="ProductPrice"/>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>