@model Entities.Models.Product
<div class="col-md-4 my-3"> @*Orta çözünürlük tamamlamak için col-md-4. Toplam 12. Örneğin burayı col-md-3 yaparsak 4 tane product görünür.*@
    <div class="card" style="width: 18rem;">
        <img src="@Model?.ImageUrl" class="card-img-top" alt="..."> @*Eger null olursa foto cekmeye calismayacak*@
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <div class="btn btn-group">
                <a asp-action="Get" asp-route-id="@Model.ProductID" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>      
                    Details
                </a>
                <form id="@Model.ProductID" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="ProductID" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
               </div>
        </div>
    </div>
</div>