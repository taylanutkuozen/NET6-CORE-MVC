@*Layout="_Layout"; ViewStart kullandık ve ayrı ayrı belirtmeye gerek kalmadı.*@
@*@model StoreApp.Models.Product bu ifadeyi _ViewImports kısmından alabilir artık.*@
@model Entities.Models.Product
@using StoreApp.Infrastructure.Extensions
<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName"/>
            <p class="lead text-danger">@Model.ProductPrice.ToString("c")</p>
        </div>
    </div>
</div>
<div class="text-center">
    <div class="btn-group">
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
                Home
                </a>
                <form id="@Model.ProductID" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="@Model.ProductID"/>
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
                <i class="fa-solid fa-list"></i>
                Products
                </a>
        </div>
    </div>
  </div>  
<br/>
section Header{
    <div>
        Header for only Get
    </div>
}@*Burası sadece Get.cshtml de görünecektir ve Index.cshtml içerisinde görünmeyecektir.*@